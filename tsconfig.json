{
  "compileOnSave": true,
  "compilerOptions": {
      "outDir": "./dist",
      "allowJs": true,
      "target": "es5",
      "allowUnreachableCode": false,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "typeRoots": [ "./typings" ],
      "outFile": "./dist/combined.js"
  },
  "include": [
      "./**/*"
  ],
  "exclude": [
      "./plugins/**/*",
      "./typings/**/*",
      "./dist/**/*" 
  ]
}